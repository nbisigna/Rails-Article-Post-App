
<%= hidden_field_tag y = @post.get_likes.size %>
<span id='likes'>
<%=y%>
</span>



<span class='parent'>
		
<% if (current_user) && (@post.user_id != current_user.id) && (current_user.voted_up_on? @post) %>
	<%= link_to '√', like_post_path(@post), remote: true, id: 'like', class: 'liked'%>
	|
<%= link_to 'X', dislike_post_path(@post), remote: true, id: 'dislike', class: 'disliked' %>



<%elsif (current_user) && (@post.user_id != current_user.id) && (current_user.voted_down_on? @post) %>
<%= link_to '√', like_post_path(@post), remote: true, id: 'like', class: 'disliked'%>
|
<%= link_to 'X', dislike_post_path(@post), remote: true, id: 'dislike', class: 'liked' %>

<%elsif (current_user) && (@post.user_id == current_user.id)%>
 <span id='like'>√</span> | <span id='dislike'>X</span>


<%else%>
<%= link_to '√', like_post_path(@post), remote: true, id: 'like'%>
 | 
<%= link_to 'X', dislike_post_path(@post), remote: true, id: 'dislike' %>
<%end%>

</span>

<%= hidden_field_tag z = @post.get_dislikes.size %>
<span id='dislikes'>
<%=z%>
</span>
